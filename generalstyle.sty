% important sets
\newcommand{\Natural}{\mathbb{N}}
\newcommand{\Integer}{\mathbb{Z}}
\newcommand{\Real}{\mathbb{R}}
\newcommand{\Complex}{\mathbb{K}}


% space and set constructions
\newcommand{\ball}[2]{\operatorname{B}(#2,#1)}
