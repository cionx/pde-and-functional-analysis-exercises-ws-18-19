% custom macros with case distinctions
\NewDocumentCommand{\suchthat}{s}{
  \IfBooleanTF{#1}
    {\,\middle|\,}
    {\mathrel{|}}       
}
\NewDocumentCommand{\restrict}{smmO{}}{
  \IfBooleanTF{#1}
    {\left. {#2} \,\middle|_{#3}^{#4} \right.}
    {{#2}\,|_{#3}^{#4}}
}
